
<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Tipo</th>
                <th># Accionistas</th>
                <th>Capital</th>
                <th>Dpto - Ciudad</th>
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                <th>Cliente</th>
                {% endif %}
            </tr>
        </thead>
        <tbody>
        {% for company in companies %}
            <tr>
                <td>{{ company.name }}</td>
                <td>{{ company.typeName }}</td>
                <td>{{ company.partners }}</td>
                <td>{{ company.capital|number_format() }}</td>
                <td>{{ company.georeferenceId.padreId }} - {{ company.georeferenceId }}</td>
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                    <td>{{ company.userId.email }}</td>
                {% endif %}
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

